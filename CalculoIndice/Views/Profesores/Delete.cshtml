@model CalculoIndice.Models.Profesores

@{
	ViewBag.Title = "Eliminar";
}

<br />
<center><h2><b>Eliminar Profesor</b></h2></center>

<center><h3>Estas seguro de borrar esto?</h3></center>
<div>

	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Nombre)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Nombre)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.CorreoElectronico)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.CorreoElectronico)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.DNI)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.DNI)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Direccion)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Direccion)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Telefono)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Telefono)
		</dd>

	</dl>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div style="margin-left: 450px;">
			<br />
			<input type="submit" value="Eliminar" class="btn btn-danger" style="width: 250px; position: center; top: 50%;" />
			<br /> <br />
		</div>
		<div class="btn btn-info" style="width:280px">
			@Html.ActionLink("Regresar a la lista de profesores", "Index", new { @class = "btn btn-info" }, new { @style = "color:white;" })
			<br />
		</div>
	}
</div>
