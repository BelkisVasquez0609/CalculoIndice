@model IEnumerable<CalculoIndice.Models.Calificacion>

@{
    ViewBag.Title = "Index";
}

</br>
<center><h2 style="text-decoration: underline"><b> Calificaciones</b></h2></center>
<div class="btn btn-success">
    @Html.ActionLink("Asignar calificaciòn", "Create", new { @class = "btn btn-success" }, new { @style = "color:white;" })
    <br />
</div>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Asignatura)
        </th>
        <th>
            <label>Estudiante</label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Calificación)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Promedio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Asignatura.Clave)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estudiantes.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calificación)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Promedio)
            </td>
            <td>
                <div class="btn-group-vertical">
                    <div class="btn btn-primary">
                        @Html.ActionLink("Editar   ", "Edit", new { id = item.AsignaturaId }, new { @style = "color:white;" }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.AsignaturaId }, new { @style = "color:white;" }) |
                        @Html.ActionLink("Borrar ", "Delete", new { id = item.AsignaturaId }, new { @style = "color:white;" })
                    </div>
                </div>
            </td>
        </tr>
    }

</table>
