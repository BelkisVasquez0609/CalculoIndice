@model CalculoIndice.Models.Carrera

@{
    ViewBag.Title = "Crear";
}

<br />
<center><h2><b>Creación de carreras</b></h2></center>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <center>
            <label>Descripción</label>
            <div class="form-group">

                <div class="col-md-10" style="width:1190px">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })

                    <br />
                    <input type="submit" value="Crear" class="btn btn-success" style="width:1550px" />
                    <br />
                </div>
            </div>
        </center>
    </div>

}

<div class="btn btn-info" style="width:280px">

    @Html.ActionLink("Regresar a la lista de carreras", "Index", new { @class = "btn btn-info" }, new { @style = "color:white;" })

    <br />
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
