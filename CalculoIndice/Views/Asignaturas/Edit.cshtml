@model CalculoIndice.Models.Asignatura

@{
    ViewBag.Title = "Editar";
}

<br />
<center><h2><b>Editar de asignaturas</b></h2></center>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Asignatura</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AsignaturaId)


        <div class="row" style="width:1650px">
            <div class="col-lg-5">
                <div class="form-group">
                    <div style="margin-right">
                        @Html.LabelFor(model => model.Clave, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Clave, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Clave, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Credito, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Credito, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Credito, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(model => model.PreRequisitos, "PreRequisitos", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("PreRequisitos", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PreRequisitos, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CoRequisitos, "CoRequisitos", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("CoRequisitos", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CoRequisitos, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ProfesoresId, "ProfesoresId", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ProfesoresId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProfesoresId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <center>
            <input type="submit" value="Guardar" class="btn btn-success" style="width:450px" />
            <br /> <br />
        </center>
    </div>
}
<center>
    <div class="btn btn-info" style="width:280px">

        @Html.ActionLink("Regresar a la lista de asignaturas", "Index", new { @class = "btn btn-info" }, new { @style = "color:white;" })

        <br />
    </div>
</center>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
