@model IEnumerable<CalculoIndice.Models.Asignatura>

@{
    ViewBag.Title = "Asignaturas";
}
</br>
<center><h2 style="text-decoration: underline"><b> Asignaturas</b></h2></center>
<div class="btn btn-success">
    @Html.ActionLink("Crear nueva asignatura", "Create", new { @class = "btn btn-success" }, new { @style = "color:white;" })
    <br />
</div>
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clave)
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Nombre)*@
                <label>Descripcion</label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asignatura2.Clave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asignatura3.Clave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesores)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Clave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credito)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Asignatura2.Clave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Asignatura3.Clave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profesores.Nombre)
                </td>
                <td>
                    <div class="btn-group-vertical">
					<div class="btn btn-primary">
						@Html.ActionLink("Editar   ", "Edit", new { id = item.AsignaturaId }, new { @style = "color:white;" }) |
						@Html.ActionLink("Detalles", "Details", new { id = item.AsignaturaId }, new { @style = "color:white;" }) |
						@Html.ActionLink("Borrar ", "Delete", new { id = item.AsignaturaId }, new { @style = "color:white;" })
					</div>
					</div>
                </td>
            </tr>
        }

    </table>
